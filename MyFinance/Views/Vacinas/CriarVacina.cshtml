@model VacinaModel
@{
    ViewData["Title"] = "CriarVacina";

    
}

<h2>Criar Campanha de Vacinação</h2>

<form asp-controller="Vacinas" asp-action="CriarVacina">
    <div class="form-group">
        <label>ID:</label>
        <input type="text" class="form-control" asp-for="IdVacina">
        <span asp-validation-for="IdVacina" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Descrição:</label>
        <input type="text" class="form-control" asp-for="Descricao">
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Data Vacinação:</label>
        <input type="datetime" class="form-control" asp-for="Data">
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>
